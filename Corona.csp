	.equ keyboard_status, $000
	.equ keyboard_data, $001

poll_keybd:	INB keyboard_status
	JGE poll_keybd
	INB keyboard_data
	STA $D00
	;need to check whether the d00 location is "get pwned" here
	;if it does equal then jmp to end
	JMP poll_keybd
	


erase:	.equ @, $000
	LDA# $FFF
	STA $000
	LDX# $001
	LDA# $000
	STA+ $001
	ADX# $001
	CMX $000
	JEQ end


end:	hlt